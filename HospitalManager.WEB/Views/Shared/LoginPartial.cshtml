@model HospitalManager.WEB.ViewModels.Account.LoginViewModel

@using (Html.BeginForm("Login", "Account"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4 class="center white-text">Login</h4>
        <h6 class="center">Do you have an account?
            @Html.ActionLink("Register", "Register", new { controller = "Account", action="Register", @class="text-orange"})
        </h6>
        <div class="row">
            <div class="col s12 l10 push-l1">
                @Html.ValidationSummary(true, "", new { @class = "red-text" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "red-text" })
                <div class="input-field">
                    @Html.LabelFor(model => model.Email, new { @class = "white-text" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => model.Password, new { @class = "white-text" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red-text" })
                </div>
                <div class="input-field center">
                    <input type="submit" value="Login" class="btn btn-default orange-background" />
                </div>
            </div>
        </div>
    </div>
}
