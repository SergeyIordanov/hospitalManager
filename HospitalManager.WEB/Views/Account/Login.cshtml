@using Microsoft.Owin.Security
@model HospitalManager.WEB.ViewModels.Account.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4 class="center grey-text">Login</h4>
        <div class="row">
            <div class="col s12 m6 push-m3">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "red-text" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "red-text" })
                <div class="input-field">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red-text" })
                </div>

                <div class="form-group">
                    <div class="center">
                        <input type="submit" value="Login" class="btn btn-default orange-background" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row center" style="margin-bottom: 350px">
    @{
        var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes().ToList();

        if (!loginProviders.Any())
        {
            <div>
                <p>
                    There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=403804">this article</a>
                    for details on setting up this ASP.NET application to support logging in via external services.
                </p>
            </div>
        }
        else
        {
            using (Html.BeginForm("ExternalLogin", "Account"))
            {
                @Html.AntiForgeryToken()
                <div id="socialLoginList" class="center">
                    @foreach (var p in loginProviders)
                    {
                        <button type="submit" class="btn btn-default center" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account">@p.AuthenticationType</button>
                    }
                </div>
            }
        }
    }
</div>
