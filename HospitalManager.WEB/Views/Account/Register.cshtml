@using HospitalManager.Core.Enums
@model HospitalManager.WEB.ViewModels.Account.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div>
        <h4 class="center grey-text">Register</h4>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "")

        <div class="row">
            <div class="col s12 m6 push-m3">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red-text" })

                <div class="input-field">
                    @Html.LabelFor(model => model.Name)
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "red-text" })
                <div class="input-field">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red-text" })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => model.ConfirmPassword)
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "red-text" })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => model.Address)
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "red-text" })
                </div>
                <div class="input-field">
                    @Html.LabelFor(m => m.Age)
                    @Html.EditorFor(m => m.Age, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Age, "")
                </div>
                <div class="input-field">
                    <input name="Gender" type="radio" id="male" value="@Gender.Male"/>
                    <label for="male">Male</label>

                    <input name="Gender" type="radio" id="female" value="@Gender.Female"/>
                    <label for="female">Female</label>
                    @Html.ValidationMessageFor(m => m.Gender)
                </div>

                <div class="input-field">
                    <div class="center">
                        <input type="submit" value="Register" class="btn" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
